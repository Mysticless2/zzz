-- Effect Tester Server Handler
local effectRemote = game.ReplicatedStorage:WaitForChild("Effect")

effectRemote.OnServerEvent:Connect(function(player, effectType, ...)
	local args = {...}

	-- Check if it's a test effect
	if string.sub(effectType, 1, 5) == "test_" then
		local actualEffect = string.sub(effectType, 6) -- Remove "test_" prefix

		-- Fire the effect to all clients
		effectRemote:FireAllClients(actualEffect, unpack(args))

		print("Fired effect:", actualEffect, "for player:", player.Name)
	end
end)
